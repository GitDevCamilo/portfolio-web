<astro-fragment>
    <style>
      .background {
        /* Especifica la ruta de tu imagen */
        background-image: url('public/img/bkg.png'); 
        background-repeat: repeat; /* Repetir la imagen */
        /* Opcional: ajusta otras propiedades de fondo según sea necesario */
        background-size: 170rem; /* Ajusta el tamaño de la imagen para cubrir completamente el área */
        background-position: center; /* Centra la imagen de fondo */
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1; /* Para que el fondo esté detrás de otros elementos */
      }
    </style>
  
    <div class="background"></div>
  </astro-fragment>
  